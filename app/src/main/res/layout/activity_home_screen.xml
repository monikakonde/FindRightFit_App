<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_bg"
    tools:context=".Home_ScreenActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHelloSumit"
        style="@style/hello_sumit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen50"
        android:layout_marginTop="@dimen/dimen50"
        android:drawableEnd="@drawable/ic_notifications"
        android:text="@string/Hello_Sumit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvWelcomeToVirtualAssistants"
        style="@style/welcome_to_virtual_assistants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen50"
        android:layout_marginTop="@dimen/dimen8"
        android:text="@string/welcome_to_virtual_assistants"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHelloSumit" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSearch"
        style="@style/search_services"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen44"
        android:layout_marginHorizontal="@dimen/dimen50"
        android:layout_marginTop="@dimen/dimen20"
        android:background="@drawable/bg_curve_white_12"
        android:drawableEnd="@drawable/ic_search"
        android:hint="@string/search_services"
        android:paddingStart="@dimen/dimen20"
        android:paddingTop="@dimen/dimen10"
        android:paddingEnd="@dimen/dimen20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWelcomeToVirtualAssistants" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="500dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSearch">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRequestConsultation"
            style="@style/request_consultation"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="@dimen/dimen20"
            android:layout_marginBottom="@dimen/dimen50"
            android:background="@drawable/bg_curve_green_light_8"
            android:text="@string/request_a_consultation"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="@id/constraintLayout3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSearch">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ConstraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="400dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/bottomCard"
                android:layout_width="match_parent"
                android:layout_height="876dp"
                android:layout_marginTop="50dp"
                android:backgroundTint="@color/off_white"
                android:orientation="horizontal"
                app:cardCornerRadius="46dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="@id/ConstraintLayout2"
                app:layout_constraintVertical_bias=".7">

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvAdmin"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginTop="@dimen/dimen30"
                app:cardCornerRadius="@dimen/dimen12"
                app:cardElevation="10dp"
                app:layout_constraintEnd_toStartOf="@+id/cvSocialMedia"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/bottomCard">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivAdmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen50"
                    android:layout_marginTop="@dimen/dimen30"
                    android:layout_marginEnd="@dimen/dimen50"
                    app:srcCompat="@drawable/img_admin" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/cv_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="110dp"
                    android:gravity="center"
                    android:text="@string/executive_admin"
                    android:textSize="20sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvSocialMedia"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginTop="@dimen/dimen30"
                app:cardCornerRadius="@dimen/dimen12"
                app:cardElevation="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cvAdmin"
                app:layout_constraintTop_toTopOf="@+id/bottomCard">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivSocialMedia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen50"
                    android:layout_marginTop="@dimen/dimen30"
                    android:layout_marginEnd="@dimen/dimen50"
                    app:srcCompat="@drawable/img_social_media" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/cv_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="110dp"
                    android:gravity="center"
                    android:text="@string/marketing_social_media"
                    android:textSize="20sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvProjectManagement"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginTop="@dimen/dimen30"
                app:cardCornerRadius="@dimen/dimen12"
                app:cardElevation="10dp"
                app:layout_constraintEnd_toStartOf="@+id/cvCustomerService"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cvAdmin">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivProjectManagement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen50"
                    android:layout_marginTop="@dimen/dimen30"
                    android:layout_marginEnd="@dimen/dimen50"
                    app:srcCompat="@drawable/img_project_management" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/cv_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="110dp"
                    android:gravity="center"
                    android:text="@string/project_management"
                    android:textSize="20sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvCustomerService"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginTop="@dimen/dimen30"
                app:cardCornerRadius="@dimen/dimen12"
                app:cardElevation="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cvProjectManagement"
                app:layout_constraintTop_toBottomOf="@id/cvSocialMedia">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivCustomer_Service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen50"
                    android:layout_marginTop="@dimen/dimen30"
                    android:layout_marginEnd="@dimen/dimen50"
                    app:srcCompat="@drawable/img_customer_service" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/cv_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="110dp"
                    android:gravity="center"
                    android:text="@string/customer_service"
                    android:textSize="20sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvDesignServices"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginTop="@dimen/dimen30"
                app:cardCornerRadius="@dimen/dimen12"
                app:cardElevation="10dp"
                app:layout_constraintEnd_toStartOf="@+id/cvBookKeeping"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cvProjectManagement">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivDesignServices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen50"
                    android:layout_marginTop="@dimen/dimen30"
                    android:layout_marginEnd="@dimen/dimen50"
                    app:srcCompat="@drawable/img_design_services" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/cv_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="110dp"
                    android:gravity="center"
                    android:text="@string/design_services"
                    android:textSize="20sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvBookKeeping"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginTop="@dimen/dimen30"
                app:cardCornerRadius="@dimen/dimen12"
                app:cardElevation="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cvDesignServices"
                app:layout_constraintTop_toBottomOf="@id/cvCustomerService">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivBookKeeping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen50"
                    android:layout_marginTop="@dimen/dimen30"
                    android:layout_marginEnd="@dimen/dimen50"
                    app:srcCompat="@drawable/img_book_keeping" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/cv_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="110dp"
                    android:gravity="center"
                    android:text="@string/book_keeping"
                    android:textSize="20sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvWritingNEditing"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginTop="@dimen/dimen30"
                app:cardCornerRadius="@dimen/dimen12"
                app:cardElevation="10dp"
                app:layout_constraintEnd_toStartOf="@+id/cvMultilingualServices"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cvDesignServices">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivWritingNEditing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen50"
                    android:layout_marginTop="@dimen/dimen30"
                    android:layout_marginEnd="@dimen/dimen50"
                    app:srcCompat="@drawable/img_writing_n_editing" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/cv_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="110dp"
                    android:gravity="center"
                    android:text="@string/writing_and_editing"
                    android:textSize="20sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvMultilingualServices"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginTop="@dimen/dimen30"
                app:cardCornerRadius="@dimen/dimen12"
                app:cardElevation="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cvWritingNEditing"
                app:layout_constraintTop_toBottomOf="@id/cvBookKeeping">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivMultilingualServices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen50"
                    android:layout_marginTop="@dimen/dimen30"
                    android:layout_marginEnd="@dimen/dimen50"
                    app:srcCompat="@drawable/img_multilingual_services" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/cv_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="110dp"
                    android:gravity="center"
                    android:text="@string/multilingual_services"
                    android:textSize="20sp" />

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>






